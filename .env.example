# Server Configuration
NODE_ENV=development
PORT=3000
MONGODB_URI=mongodb://localhost:27017/your_database
LOG_LEVEL=info

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin Configuration
FIREBASE_ADMIN_PROJECT_ID=your_admin_project_id
FIREBASE_ADMIN_PRIVATE_KEY=your_admin_private_key
FIREBASE_ADMIN_CLIENT_EMAIL=your_admin_client_email@example.com

# File Storage Configuration
FILE_STORAGE_TYPE=local  # or 's3'
FILE_UPLOAD_PATH=uploads/  # Required if FILE_STORAGE_TYPE=local

# AWS Configuration (Required if FILE_STORAGE_TYPE=s3)
AWS_REGION=your_aws_region
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name

# Email Configuration
EMAIL_SERVICE=smtp  # or 'ses'
EMAIL_FROM=noreply@example.com

# SMTP Configuration (Required if EMAIL_SERVICE=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# AWS SES Configuration (Required if EMAIL_SERVICE=ses)
AWS_SES_REGION=your_ses_region

# Payment Plugins

## Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

## OpenPay Configuration
OPENPAY_MERCHANT_ID=your_openpay_merchant_id
OPENPAY_PRIVATE_KEY=your_openpay_private_key
OPENPAY_SANDBOX=true  # Set to false for production

## MercadoPago Configuration
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_SANDBOX=true  # Set to false for production

# Shipping Plugins

## Skydropx Configuration
SKYDROPX_API_KEY=your_skydropx_api_key

## Enviacom Configuration
ENVIACOM_API_KEY=your_enviacom_api_key

# Communication Plugins

## WhatsApp Configuration
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_WEBHOOK_SECRET=your_whatsapp_webhook_secret

# Note: Replace all "your_*" values with your actual credentials
# For sandbox/test environments, use test credentials
# For production, use production credentials
