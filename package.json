{
  "name": "bun-express-apiato",
  "version": "1.0.0",
  "description": "Express.js API with Apiato for Bun.js",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build": "tsc",
    "swagger:generate": "bun run src/scripts/generate-swagger.ts",
    "swagger:watch": "bun --watch run src/scripts/generate-swagger.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.750.0",
    "@aws-sdk/client-ses": "^3.750.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "apiato": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase": "^11.3.1",
    "firebase-admin": "^13.1.0",
    "joi": "^17.13.3",
    "mongoose": "^8.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.17",
    "bun-types": "latest",
    "typescript": "^5.3.3"
  }
}
